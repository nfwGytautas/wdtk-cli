{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "[Minikube] Tunnel",
            "type": "shell",
            "command": "minikube",
            "args": [
                "tunnel",
            ]
        },
        {
            "label": "[MSTK] Build",
            "type": "shell",
            "command": "go",
            "args": [
                "build",
                "-o",
                "mstk",
                "*.go",
            ],
            "options": {
                "cwd": "${workspaceFolder}/cli/"
            }
        },
        {
            "label": "[MSTK] Setup",
            "type": "shell",
            "command": "go",
            "args": [
                "run",
                "./cli",
                "setup",
            ]
        },
        {
            "label": "[MSTK] Clean",
            "type": "shell",
            "command": "go",
            "args": [
                "run",
                "./cli",
                "clean",
            ]
        }
    ]
}
