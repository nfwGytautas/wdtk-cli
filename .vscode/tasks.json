{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Launch gateway",
            "type": "shell",
            "command": "go",
            "options": {
                "cwd": "${workspaceFolder}/gomods/gateway/"
            },
            "args": [
                "run",
                "*.go",
                "${workspaceFolder}/example/coordinators.toml",
                "${workspaceFolder}/example/gateway.toml"
            ]
        },
        {
            "label": "Launch coordinator (master)",
            "type": "shell",
            "command": "go",
            "options": {
                "cwd": "${workspaceFolder}/gomods/coordinator/"
            },
            "args": [
                "run",
                "*.go",
                "${workspaceFolder}/example/coordinator_master.toml",
            ]
        },
        {
            "label": "Launch balancer (OneToOne)",
            "type": "shell",
            "command": "go",
            "options": {
                "cwd": "${workspaceFolder}/gomods/balancers/OneToOne/"
            },
            "args": [
                "run",
                "*.go",
                "${workspaceFolder}/example/coordinators.toml",
                "${workspaceFolder}/example/balancer.toml",
            ]
        },
        {
            "label": "Launch service (Calculator)",
            "type": "shell",
            "command": "go",
            "options": {
                "cwd": "${workspaceFolder}/example/calculator/"
            },
            "args": [
                "run",
                "*.go",
                "${workspaceFolder}/example/coordinators.toml",
                "${workspaceFolder}/example/microservice.toml",
            ]
        },
        {
            "label": "Minikube tunnel",
            "type": "shell",
            "command": "minikube",
            "args": [
                "tunnel",
            ]
        },
        {
            "label": "Build All",
            "type": "shell",
            "command": "python3",
            "options": {
                "cwd": "${workspaceFolder}/bin"
            },
            "args": [
                "build.py",
                "--build"
            ]
        },
    ]
}
